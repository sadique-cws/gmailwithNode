extends base.pug 

block content 
    .container-fluid.mt-4
        .row    
            .col-2 
               include side.pug
            .col-10
                h4.mt-2 Trash Mail
                table.table.table-sm.small
                    each mail in mails
                        tr
                            td=mail.senderId.fname
                            td
                                strong=mail.subject
                                    span.small.fw-lighter.ms-2=mail.content
                            td=mail.date
                